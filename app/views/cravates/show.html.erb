<div class="container py-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%= image_tag(@cravate.photo_url, width: '100%') %>
    </div>
    <div class="col-sm-12 col-md-6">
      <h1><%= @cravate.name %></h1>
      <p>Some awesome description of our amazing cravate.</p>
      <p>Amount: <%= humanized_money_with_symbol(@cravate.price) %></p>
    </div>

    <%= form_tag orders_path do %>
  <%= hidden_field_tag 'teddy_id', @teddy.id %>
  <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
<% end %>

  </div>
</div>
